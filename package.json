{
  "name": "linkedcomponents-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "@types/classnames": "^2.2.10",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.1.0",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.5",
    "@types/yup": "^0.29.8",
    "apollo-link-rest": "^0.8.0-beta.0",
    "classnames": "^2.2.6",
    "emotion": "^10.0.27",
    "formik": "^2.2.0",
    "graphql": "^15.3.0",
    "graphql-anywhere": "^4.2.7",
    "hds-core": "^0.14.0",
    "hds-react": "^0.14.0",
    "i18next": "^19.7.0",
    "i18next-browser-languagedetector": "^6.0.1",
    "i18next-intervalplural-postprocessor": "^2.0.2",
    "node-sass": "^4.14.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "react-i18next": "^11.7.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "testcafe": "^1.9.3",
    "typescript": "~4.0.3",
    "use-deep-compare-effect": "^1.4.0",
    "waait": "^1.0.5",
    "yup": "^0.29.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "codegen": "graphql-codegen --config codegen.yml",
    "test": "react-scripts test --env=jest-environment-jsdom-sixteen",
    "test:coverage": "react-scripts test --coverage --env=jest-environment-jsdom-sixteen --watchAll=false",
    "browser-test": "testcafe \"chrome --window-size='1920,1080'\" browser-tests/",
    "browser-test:local": "BROWSER_TEST_ENV=local testcafe \"chrome --window-size='1920,1080'\" browser-tests/",
    "browser-test:ci": "testcafe \"chrome:headless --disable-gpu --window-size='1920,1080'\" browser-tests/",
    "lint": "eslint --ext js,ts,tsx src",
    "lint:fix": "eslint --ext js,ts,tsx src --fix"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__snapshots__/",
      "constants.ts",
      "types.ts",
      "mutation.ts",
      "query.ts",
      ".*.d.ts",
      "src/index.tsx",
      "src/domain/app/apollo/apolloClient.ts",
      "src/domain/app/apollo/utils.ts",
      "src/domain/app/i18n/i18nInit.ts",
      "src/generated/graphql.tsx",
      "src/utils/mockDataUtils.ts",
      "src/utils/testUtils.ts"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!hds-react)/"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@apollo/react-testing": "^4.0.0",
    "@graphql-codegen/cli": "^1.18.0",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@graphql-codegen/typescript-react-apollo": "^2.0.7",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/react-hooks": "^3.4.1",
    "@testing-library/testcafe": "^4.2.3",
    "@testing-library/user-event": "^12.1.6",
    "@types/faker": "^5.1.2",
    "@types/jest": "^24.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "faker": "^5.1.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "prettier": "^2.1.2",
    "react-test-renderer": "^16.13.1"
  }
}
